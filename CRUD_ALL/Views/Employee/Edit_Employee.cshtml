@{
    Layout = "_Layout";
}

@model CRUD_ALL.Models.Employee_Model;

<div class="container mt-5">
    <div class="card p-4">
        <h2 class="text-center">Edit Employee</h2>
        <hr />

        <form asp-action="Update_Employee" asp-controller="Employee" method="post">
            
            <input type="hidden" asp-for="Emp_ID" name="Emp_ID" />

            <div class="form-group mb-3">
                <label for="Name"><span style="color:red">*</span> Name</label>
                <input type="text" class="form-control" asp-for="Name" placeholder="Enter employee name" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>

            <div class="form-group mb-3">
                <label for="Email">Email</label>
                <input type="text" class="form-control" asp-for="Email" placeholder="Enter employee email" />
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>

            <div class="form-group mb-3">
                <label for="Password"><span style="color:red;">*</span> Password</label>
                <input type="password" class="form-control" asp-for="Password" placeholder="Enter password" />
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>

           

            <div class="d-flex justify-content-md-center">
                <button type="submit" class="btn btn-success mx-2">Save Changes</button>
                <a href="@Url.Action("Employees", "Employee")" class="btn btn-secondary mx-2">Cancel</a>
            </div>
        </form>

        @if (ViewBag.UpdateFailMsg != null)
        {
            <div class="alert alert-danger mt-3">
                @ViewBag.UpdateFailMsg
            </div>
        }
    </div>
</div>
