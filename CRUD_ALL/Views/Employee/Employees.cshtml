@{
    Layout = "_Layout";
}

@model List<CRUD_ALL.Models.Employee_Model>

<div class="container mt-5">
    <h2 class="text-center">All Employees</h2>
    <hr />

    @if (Model != null && Model.Count > 0)
    {
        <table class="table table-bordered table-hover">
            <thead class="table-dark">
                <tr>
                    <th>#</th>
                    <th>Name</th>
                    <th>Email</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var employee in Model)
                {
                    <tr>
                        <td>@(Model.IndexOf(employee) + 1)</td> 
                        <td>@employee.Name</td>
                        <td>@employee.Email</td>
                        <td>
                            <a href="@Url.Action("Edit_Employee", "Employee", new { Emp_ID = employee.Emp_ID })" class="btn btn-warning btn-sm">Edit</a>
                            <a href="@Url.Action("Delete_Employee", "Employee", new { Emp_ID = employee.Emp_ID })" class="btn btn-danger btn-sm"
                               onclick="return confirm('Are you sure you want to delete this employee?');">Delete</a>
                        </td>

                    </tr>
                }
            </tbody>
        </table>
        @if (ViewBag.DeleteTrueMsg != null)
        {
            <div class="alert alert-success mt-3">
                @ViewBag.DeleteTrueMsg
            </div>
        }

        @if (ViewBag.DeleteFailMsg != null)
        {
            <div class="alert alert-danger mt-3">
                @ViewBag.UpdateFailMsg
            </div>
        }

    }
    else
    {
        <div class="alert alert-info text-center">
            No employees found.
        </div>
    }

   
</div>
