@{
    Layout = "_Layout";
}

@model CRUD_ALL.Models.Employee_Model

<div class="container mt-5">
    <h2 class="text-center">Employee Details</h2>
    <hr />

    <div class="card p-4">
        <h3>Employee Information</h3>
        <div class="row">
            <div class="col-md-6">
                <p><strong>Name:</strong> @Model.Name</p>
                <p><strong>Email:</strong> @Model.Email</p>
            </div>
            <div class="col-md-6">
                <p><strong>Emp ID:</strong> @Model.Emp_ID</p>
            </div>
        </div>

        <div class="d-flex justify-content-md-center">
            <a href="@Url.Action("Employees", "Employee")" class="btn btn-secondary">Back to List</a>
        </div>
    </div>
</div>
